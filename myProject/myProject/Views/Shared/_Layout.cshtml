<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="@Url.Content("~/img/ForPages/logo.png")" type="image/png" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GoodNewsAggregator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/myProject.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="main-page-wrapper">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/ForPages/logo.png" width="50" height="50" alt="icon" />
                </a>
                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Article" asp-action="Index">Новости</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Политика</a>
                        </li>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="registration-wrapper-buttons-mobile nav-item"><a class="nav-link text-white" asp-action="Register" asp-controller="Account">Регистрация</a></li>
                            <li class="registration-wrapper-buttons-mobile nav-item"><a class="nav-link text-white" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path">Вход</a></li>
                        }
                        else
                        {
                            <li class="registration-wrapper-buttons-mobile nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="MyAccount">Мой аккаунт</a></li>
                            <li class="registration-wrapper-buttons-mobile nav-item"><a class="nav-link text-white" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path">Выход</a></li>
                        }
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <div class="btn-group registration-wrapper-buttons" role="group">
                        @if (!User.Identity.IsAuthenticated)
                            {
                            <button type="button" class="btn btn-primary-dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                            Register/Login
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="Register" asp-controller="Account">Регистрация</a></li>
                            <li><a class="dropdown-item" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path">Вход</a></li>
                        </ul>
                            }
                        else
                            {
                                <button type="button" class="btn btn-primary-dropdown-toggle text-white" data-bs-toggle="dropdown" aria-expanded="false">
                                @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="MyAccount">Мой аккаунт</a></li>
                                <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path">Выход</a></li>
                            </ul>
                            }
                    </div>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container footer-text">
            &copy; 2023 - GoodNewsAggregator - <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика</a>
        </div>
    </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
