@model ArticlePreviewModel


<div class="card col-sm-12 col-md-6 col-lg-4 col-xl-3">
    @*<img src="..." class="card-img-top" alt="...">*@
    <div class="card-body">
        <h5 class="card-title"> @Model.Title</h5>
        <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">@Html.Raw(Model.ShortDescription)</p>
        <form asp-action="DeleteArticles" asp-controller="Article" asp-route-id="@Model.Id" asp-antiforgery="true" method="post">
            <div>
                <input class="btn btn-primary" type="submit" value="Delete"></input>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="card-footer-item">
            <h5>@Model.DatePosting</h5>
            <h5>@Model.SourceName</h5>
        </div>
    </div>
</div>


