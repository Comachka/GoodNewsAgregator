@model ArticlePreviewModel

<div class="card card-with-margin col-sm-12 col-md-6 col-lg-4 col-xl-3">
    @*<img src="..." class="card-img-top" alt="...">*@
    <div class="card-body">
        <h5 class="card-title"> @Model.Title</h5>
        <p class="card-text" style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">@Html.Raw(Model.ShortDescription)</p>
        <form asp-action="DeleteArticles" asp-controller="Article" asp-route-id="@Model.Id" asp-antiforgery="true" method="post">
            <div>
                <input class="btn bg-primary" type="submit" value="Delete"></input>
            </div>
        </form>
    </div>
    <div class="card-footer">
        @Model.SourceName
    </div>
</div>