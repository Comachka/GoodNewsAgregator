@model ArticlesWithPaginationModel

<div class="gx-2 supModer-hiden center">
    <a class="btn btn-create-article" asp-action="CreateArticleWithSource" asp-controller="Article">
        <img src="~/img/ForPages/create.png" width="50" height="50" alt="icon" />
    </a>
</div>
<div class="gx-2 admin-hiden center">
    <a class="btn btn-admin-panel" asp-action="ManageArticles" asp-controller="Article">
        <img src="~/img/ForPages/admin.png" width="50" height="50" alt="icon" />
    </a>
</div>

<div>
    <h4>Search</h4>
    <input type="text" id="article-search" class="form-control col col-12" placeholder="Type article name" />
</div>


<div class="row article-list">
    @foreach (var el in Model.ArticlePreviews)
    {
       await Html.RenderPartialAsync("ArticlePreviewPartial", el);
    }
</div>

<pagination page-info="Model.PageInfo" page-action="Index">
    <p>1123123123123123123</p>
</pagination>

@section Scripts
{
    <script src="/lib/bootstrap-autocomplete/autocomplete.js"></script>
    <script src="/js/article-search.js"></script>
    <script src="/js/index-page.js"></script>
    <script src="js/raiting.js" defer></script>
}
